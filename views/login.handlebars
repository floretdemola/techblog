<div class="card">
  <div class="card-header">
    <h2>Login</h2>
  </div>

  <form class="form login-form">
      <div class="form-group">
        <label for="username-input">Username:</label>
        <input class="form-input" type="text" id="username-input" />
      </div>
      <div class="form-group">
        <label for="email-input">Email:</label>
        <input class="form-input" type="email" id="email-input" />
      </div>
      <div class="form-group">
        <label for="password-input">Password:</label>
        <input class="form-input" type="password" id="password-input" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Login</button>
      </div>
    </form>
  </div>

  <div class="card">
    <div class="card-header">
    <h2>Signup</h2>
    </div>
    <form class="form signup-form">
      <div class="form-group">
        <label for="username-signup">Username:</label>
        <input class="form-input" type="text" id="username-signup" />
      </div>
      <div class="form-group">
        <label for="email-signup">Email:</label>
        <input class="form-input" type="email" id="email-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup">Password:</label>
        <input class="form-input" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Signup</button>
      </div>
    </form>
  </div>

<script src="/js/login.js"></script>