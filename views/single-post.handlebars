<div class="posts">
    <article class="card">
        <div class="card-header">
            <h2>{{post.title}}</h2>
            <div>
              Posted by {{post.User.username}} on {{format_date createdAt}}  
            </div>
        </div>
        <div class="card-body">
            {{post.body}}
        </div>
    </article>
    {{#if post.Comment}}
    <section class="card">
        <div class="card-header">
            <h3>Comments</h3>
        </div>

        <div class="card-body">
            {{#each post.Comment}}
            <div>
                <p>{{body}}</p>
                <p>Posted by {{User.username}} on {{format_date createdAt}}</p>
            </div>
            {{/each}}
        </div>
    </section>
    {{/if}}

    <form id="new-comment-form" class="card">
        <div class="card-header">
            <h3>Add Comment</h3>
        </div>
        <div class="card-body">
            <input type="text" name="post-id" value="{{post.id}}" />
            <label class="form-label" for="comment-body">Comment</label>
            <textarea name="comment-body" class="form-input"></textarea>
            <button type="submit" class="btn">Post</button>
        </div>
    </form>
</div>

<script src="/Homework/techblog/public/js/comment.js"></script>