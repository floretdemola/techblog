<div class="posts">
    <article class="card">
        <div class="card-header">
            <h2>{{post.title}}</h2>
            <div class="card">
              Posted by {{post.user.username}} on {{format_date this.createdAt}}  
            </div>
        </div>
        <div class="card-body">
            {{post.content}}
        </div>
    </article>
    {{#if post.Comments}}
    <section class="card">
        <div class="card-header">
            <h3>Comments</h3>
        </div>

        <div class="card-body">
            {{#each post.comments}}
            <div>
                <p>{{body}}</p>
                <p>Posted by {{user.username}} on {{format_date this.createdAt}}</p>
                <button id="delete-btn"type="delete" class="delete-btn">Delete</button>
            </div>
            {{/each}}
            
        </div>
    </section>
    {{/if}}

    <form id="new-comment-form" class="card">
        <div class="card-header">
            <h3>Add Comment</h3>
        </div>
        <div class="card-body">
            <input type="text" name="post-id" value="{{post.user_id}}" />
            <label class="form-label" for="comment-body">Comment</label>
            <textarea name="comment-body" class="form-input"></textarea>
            <button type="submit" class="btn">Post</button>
        </div>
    </form>
</div>

<script src="/js/comment.js"></script>